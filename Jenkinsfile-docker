pipeline {
  agent none

  stages {
    stage('Checkout') {
      agent any
      steps {
        git branch:'sub1', url: 'https://github.com/mlsj95/study2-maven-java-spring-hello-webapp.git'
      }
    }
    stage('Build') {
      agent {
        docker { image 'maven:3-openjdk-8'}
    }
      steps {
        sh 'mvn clean package'      }
    }
    stage('Build Docker Image') {
      agent any
      steps {
        sh 'docker build -t hello-world . '
      }
    }
    stage('Tag Docker Image') {
      agent any
      steps {
        sh 'docker tag hello-world sjleenobreak/hello-world:latest'
        sh 'docker tag hello-world sjleenobreak/hello-world:$BUILD_NUMBER'
      }
    }
    stage('Publish Docker Image') {
      agent any
      steps {
        withDockerRegistry(credentialID: 'docker-hub-token', url: 'http://index.docker.io/v1/') {
          sh 'docker push sjleenobreak/hello-world:latest'
          sh 'docker push sjleenobreak/hello-world:$BUILD_NUMBER'
        }
      }
    }
    stage('Run Docker Container') {
      agent {
        docker { image 'docker:dind'}
      }
      steps {
        sh 'docker -H tcp://192.168.56.103:2375 container run -d --name hello-world-tomcat -p 80:8080 sjleenobreak/hello-world:$BUILD_NUMBER'
      }
    }
  }
}
