pipeline {
  agent none

  stages {
    stage('Checkout') {
      agent any
      steps {
        git branch:'sub1', url: 'https://github.com/mlsj95/study2-maven-java-spring-hello-webapp.git'
      }
    }
    stage('Build') {
      agent {
        docker { image 'maven:3-openjdk-8'}
    }
      steps {
        sh 'mvn clean package'      }
    }
    stage('Build Docker Image') {
      agent any
      steps {
        sh 'docker build -t hello-world . '
      }
    }
    stage('Tag Docker Image') {
      agent any
      steps {
        sh 'docker tag hello-world sjleenobreak/hello-world:latest'
        sh 'docker tag hello-world sjleenobreak/hello-world:$BUILD_NUMBER'
      }
    }
    stage('Publish Docker Image') {
      agent any
      steps {
        withDockerRegistry(credentialsId: 'docker-hub-token', url: 'https://index.docker.io/v1/') {
          sh 'docker push sjleenobreak/hello-world:latest'
          sh 'docker push sjleenobreak/hello-world:$BUILD_NUMBER'
        }
      }
    }
    stage('Run Docker Container') {
      agent {
        docker { image 'sjleenobreak/jenkins-ansible:latest'
                 args '-u 0:0 DOCKER_HOST:tcp://192.168.56.103:2375'
       }
     }
      steps {
        ansiblePlaybook(playbook: 'docker-container-deploy.yml')
      }
    }
  }
}
